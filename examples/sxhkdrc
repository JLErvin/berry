#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	st

# program launcher
alt + d
	dmenu_run

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#

alt + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

alt + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

alt + {1-9}
    berryc switch_workspace {0-9}

alt + shift + {1-9}
    berryc send_to_workspace {0-9}

alt + m
    berryc window_monocle

alt + f
    berryc fullscreen

alt +  p
    berryc snap_right

alt + o 
    berryc omni

alt + n
    berryc toggle_decorations

alt + Tab
    berryc cycle_focus

alt + q
    berryc window_close

alt + c
    berryc window_center

~button1
    berryc pointer_focus

~button2
	berryc pointer_focus
